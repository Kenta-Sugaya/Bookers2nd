<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="header">
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-left">
            <span class="title">
             
              
              <%=link_to "Bookers", root_path, class:"text-white"%>
              
            
            </span>
              
        </nav>
        <nav>
          <ul class="nav pull-right nav-pills">
            <% if user_signed_in? %>
              <li class=list>
                <%= link_to "Home", user_path(current_user), class:"btn btn-link fas fa-home nav-link text-light" %>
                
                
                  
                
              </li>
              <li class=list>
                <%= link_to "Users", users_path, class:"btn btn-link fas fa-users nav-link text-light" %>
                
                
              </li>
              <li class=list>
                <%= link_to "Books", books_path, class:"btn btn-link fas fa-book-open nav-link text-light" %>
                
              </li>
              <li class=list>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"btn btn-link fas fa-sign-out-alt nav-link text-light" %>
                
              </li>
              
            <% else %>
              <li class=list>
                <%= link_to "Home",root_path, class:"btn btn-link fas fa-home nav-link text-light" %>
                
              </li>
              <li class=list>
                <%= link_to "About",home_about_path, class:"btn btn-link fas fa-link nav-link text-light" %>
                
              </li>
              <li class=list>
                <%= link_to "sign up",new_user_registration_path, class:"btn btn-link fas fa-user-plus nav-link text-light" %>
                
                
              </li>
              <li class=list>
                <%= link_to "Login",new_user_session_path, class:"btn btn-link fas fa-sign-in-alt nav-link text-light" %>
                
                
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="body">
      <p class="notice"><%= notice %></p>

      <%= yield %>


        
      </div>
    </div>
    <footer>
          <p class="text-center"> CopyRight Infratop.inc</p>
        </footer>
  </body>
</html>