<div class="container">
  <div class="row">
	  <div class="col-md-12">
    <h1>User info</h1>
    <%= form_for(@user) do |f| %>
      <%= render 'books/error', model: @user %>
    <div class="user-name">Name</div>
      <%= f.text_field :name %>
    <div class="user-edit-image">Image</div>
      <%= f.attachment_field :profile_image %>
    <div class="form-body">Introduction</div>
      <%= f.text_area :introduction %><br>
    <div class="upload">
      <i class="fas fa-user-cog">
      <%= f.submit "Update User" %>
      
        
      </i>
    </div>
    <% end %>
    </div>
  </div>
</div>