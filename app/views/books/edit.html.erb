<div class="col-md-6">
  <h1>Editing Book</h1>
  <%= render 'books/error', model: @book %>
  
  <%= form_for @book do |f| %>
  <div class="field row">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title, value: @book.title, class: "col-md-4 book_title" %>
  </div>
  <div class="field row">
  <%= f.label :body, "Opinion" %>
  <%= f.text_area :body, value: @book.body, class: "col-md-4 book_body" %>
  </div>
  <div class="actions row">
  <%= f.submit "Update Book", class: "btn btn-primary col-md-2" %>
  </div>
  <% end %>
  <%= link_to "Show", book_path(params[:id]) %>
  
  <%= link_to "Back", books_path %>
  </div>
</div>